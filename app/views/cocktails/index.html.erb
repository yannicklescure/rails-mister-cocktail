<% def capitalize_first_letter(str) %>
  <% str.split(' ').map { |e| e.downcase.capitalize }.join(' ') %>
<% end %>
<h1>Cocktails#index</h1>
<p>Find me in app/views/cocktails/index.html.erb</p>
<hr>
<p class="mt-3"><%= link_to raw('<i class="fas fa-plus"></i> add new cocktail'), new_cocktail_path, class: 'btn btn-light' %></p>
<div class="row">
<% @cocktails.reverse.each do |cocktail| %>
  <% unless cocktail[:photo].nil? %>
    <div class="col-md-6 col-lg-4 mb-3">
      <div class="card bg-dark text-white">
        <%= cl_image_tag cocktail.photo, height: 300, crop: :lfill, class: "card-img" %>
        <div class="card-img-overlay">
          <%= link_to capitalize_first_letter(cocktail.name), cocktail_path(cocktail), class: 'h5 text-white text-decoration-none stretched-link' %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
</div>

<h1>Cocktails#show</h1>
<p>Find me in app/views/cocktails/show.html.erb</p>
<hr>
<p><%= @cocktail.name.downcase.capitalize %></p>
<% if @cocktail.photo %>
  <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
<% end %>
<hr>
<ul class="list-unstyled">
  <% @doses.each do |dose| %>
    <% cocktail = Cocktail.find(dose.cocktail_id) %>
    <% ingredient = Ingredient.find(dose.ingredient_id) %>
    <li><%= dose.description %> (<%= cocktail.name %>, <%= ingredient.name.downcase.capitalize %>) <%= link_to raw('<i class="far fa-trash-alt"></i>'), dose_path(dose), method: :delete %></li>
  <% end %>
</ul>
<hr>
<p class="mt-3"><%= link_to raw('<i class="fas fa-plus"></i> add new dose'), new_cocktail_dose_path(@cocktail) %></p>
<p class="mt-3"><%= link_to raw('<i class="fas fa-undo-alt"></i> back to cocktails'), root_path  %></p>

